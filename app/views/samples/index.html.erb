<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Samples</h1>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Configuration URL</th>
          <th>App Token</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @samples.each do |sample| %>
          <tr>
            <td><%= sample.name %></td>
            <td><%= link_to "#{request.base_url}/app/#{sample.token}", token_path(token: sample.token) %></td>
            <td><%= sample.token %></td>
            <td><%= link_to 'Show', sample %></td>
            <td><%= link_to 'Edit', edit_sample_path(sample) %></td>
            <td><%= link_to 'Destroy', sample, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'New Sample', new_sample_path %>
  </div>
</div>
