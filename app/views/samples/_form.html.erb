<%= simple_form_for(@sample) do |f| %>
  <%= f.error_notification %>
  <%= f.input :name %>
  <%= f.input :color, as: :colorpicker %>
  <%= simple_fields_for :copy_from do |n| %>
    <%= n.input :id, :collection => [Sample.new(id:0, name:"None")] + Sample.all, :label_method => :name, :value_method => :id, :label => "Copy From", :include_blank => false %>
  <% end %>
  <%= f.button :submit %>
<% end %>
